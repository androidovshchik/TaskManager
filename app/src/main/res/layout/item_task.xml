<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@id/tasks_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tasks_item_complete"
        android:layout_marginEnd="4dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        tools:text="TextTextTextTextTextTextTextTextTextTextTextTextText"/>

    <TextView
        android:id="@id/tasks_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tasks_item_complete"
        android:layout_below="@id/tasks_item_info"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        tools:text="TextTextTextTextTextTextTextTextTextTextTextTextText"/>

    <ImageButton
        android:id="@id/tasks_item_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tasks_item_defer"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_done_black_24dp"/>

    <ImageButton
        android:id="@id/tasks_item_defer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tasks_item_cancel"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_update_black_24dp"/>

    <ImageButton
        android:id="@id/tasks_item_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_black_24dp"/>

</RelativeLayout>